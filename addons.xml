<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.video.Evonic"
       name="Evonic"
       version="1.3.2.2"
       provider-name="mentality">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.beautifulsoup" version="3.2.0"/>
        <import addon="script.module.metahandler" version="2.5.1"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Nur fuer Premium Member</summary>
        <description lang="de">
Jetzt funktionieren endlich die Ansicht Einstellungen.Man kann in den Addon Einstellungen den Metahandler für die Filminfos jetzt ausschalten. Wenn Ihr HDPlus oder HDMobile einstellt, spielen die Filme von alleine ab.
Mentality und EVONIC wünschen euch viel Spaß!!!</description>
        <description lang="en">
            German language content.
            An own Database is implemented!!!
            Thx goes Eldorado for his metahandler.
Mentality and EVONIC are presenting!!!</description>
        <platform>all</platform>
    </extension>
</addon>

<addon id="repository.evonic"
		name="Evonic Repository"
		version="0.0.2"
		provider-name="MENTALITY">
	<extension point="xbmc.addon.repository" name="Repository Evonic.tv">
		<info compressed="false">https://raw.githubusercontent.com/mentality1976/repository-evonic/master/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/mentality1976/repository-evonic/master/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/mentality1976/repository-evonic/master/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Official repository for Evonic</summary>
		<summary lang="tr">Evonic'e özel repository</summary>
		<description lang="en">Official video addon for Evonic</description>
		<description lang="de">Offizielles Repository für Evonic</description>
		<disclaimer lang="de">MENTALITY's KODI plugins</disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
